@model IEnumerable<Workshop1.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Students</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-3">
            <label class="form-label">Index</label>
            <input type="text" name="index" value="@Context.Request.Query["index"]" class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">First name</label>
            <input type="text" name="firstName" value="@Context.Request.Query["firstName"]" class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Last name</label>
            <input type="text" name="lastName" value="@Context.Request.Query["lastName"]" class="form-control" />
        </div>

        <div class="col-md-3">  
            <label class="form-label">Course</label>
            <select name="courseId" class="form-select" asp-items="(SelectList)ViewBag.Courses">
                <option value="">-- All courses --</option>
            </select>
        </div>

        <div class="col-12 mt-2">
            <button type="submit" class="btn btn-primary">Filter</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Index</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Enrollment date</th>
            <th>Acquired credits</th>
            <th>Current semester</th>
            <th>Education level</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentId</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.EnrollmentDate</td>
                <td>@item.AcquiredCredits</td>
                <td>@item.CurrentSemester</td>
                <td>@item.EducationLevel</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

