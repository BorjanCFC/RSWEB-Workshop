@model Workshop1.Models.ViewModels.StudentCourseEnrollmentVM

@{
    ViewData["Title"] = "My Course Status";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="fw-bold" style="color: var(--primary-color);">@Model.CourseTitle</h2>
        </div>
    </div>

    <form asp-action="UpdateStudentEnrollment" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="CourseId" />
        <input type="hidden" asp-for="CourseTitle" />
        <input type="hidden" asp-for="SelectedYear" />
        <input type="hidden" asp-for="EnrollmentId" />

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="text-white" style="background: linear-gradient(135deg, var(--primary-color), var(--primary-light));">
                            <tr>
                                <th class="ps-3">Index</th>
                                <th>Student</th>
                                <th style="width:120px;">Exam</th>
                                <th style="width:120px;">Seminar</th>
                                <th style="width:120px;">Project</th>
                                <th style="width:140px;">Additional</th>
                                <th style="width:110px;">Grade</th>
                                <th style="width:170px;">Finish date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="ps-3">@Model.StudentIndex</td>
                                <td>@Model.StudentName</td>

                                <td><input class="form-control" value="@Model.ExamPoints" disabled /></td>
                                <td><input class="form-control" value="@Model.SeminarPoints" disabled /></td>
                                <td><input class="form-control" value="@Model.ProjectPoints" disabled /></td>
                                <td><input class="form-control" value="@Model.AdditionalPoints" disabled /></td>

                                <td><input class="form-control" value="@Model.Grade" disabled /></td>
                                <td>
                                    <input class="form-control" type="date"
                                           value="@(Model.FinishDate?.ToString("yyyy-MM-dd"))" disabled />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Extra section UNDER the table -->
            <div class="card-body border-top">
                <div class="row g-4">
                    <!-- Seminar file -->
                    <div class="col-lg-6">
                        <div class="p-3 rounded-3" style="background: rgba(79,70,229,0.04); border: 1px solid rgba(79,70,229,0.10);">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="mb-0 fw-semibold">
                                    <i class="fas fa-file-alt me-2" style="color: var(--primary-color);"></i>
                                    Seminar file
                                </h5>
                                @if (!string.IsNullOrWhiteSpace(Model.SeminarUrl))
                                {
                                    <a href="@Model.SeminarUrl" target="_blank" rel="noopener" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye me-1"></i>Open
                                    </a>
                                }
                            </div>

                            @if (string.IsNullOrWhiteSpace(Model.SeminarUrl))
                            {
                                <div class="text-muted mb-2">No file uploaded yet.</div>
                            }
                            else
                            {
                                <div class="text-muted mb-2">Uploaded.</div>
                            }

                            <label class="form-label fw-medium mb-1">
                                Upload / replace file
                            </label>
                            <input type="file" name="seminarFile" class="form-control" accept=".doc,.docx,.pdf" />
                            <small class="text-muted">Allowed: doc, docx, pdf</small>
                        </div>
                    </div>

                    <!-- Project link -->
                    <div class="col-lg-6">
                        <div class="p-3 rounded-3" style="background: rgba(16,185,129,0.04); border: 1px solid rgba(16,185,129,0.12);">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="mb-0 fw-semibold">
                                    <i class="fas fa-code-branch me-2" style="color: var(--secondary-color);"></i>
                                    Project (GitHub)
                                </h5>

                                @if (!string.IsNullOrWhiteSpace(Model.ProjectUrl))
                                {
                                    <a href="@Model.ProjectUrl" target="_blank" rel="noopener" class="btn btn-sm btn-outline-success">
                                        <i class="fas fa-up-right-from-square me-1"></i>Open
                                    </a>
                                }
                            </div>

                            @if (!string.IsNullOrWhiteSpace(Model.ProjectUrl))
                            {
                                <div class="mb-2">
                                    <span class="text-muted me-1">Current:</span>
                                    <a href="@Model.ProjectUrl" target="_blank" rel="noopener">
                                        @Model.ProjectUrl
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="text-muted mb-2">No GitHub link yet.</div>
                            }

                            <label class="form-label fw-medium mb-1">GitHub repository URL</label>
                            <input asp-for="ProjectUrl" class="form-control" placeholder="https://github.com/username/repo" />
                            <small class="text-muted">Paste a GitHub repository link.</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer bg-white d-flex justify-content-between">
                <a asp-controller="Courses" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to Courses
                </a>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i>Save
                </button>
            </div>
        </div>
    </form>
</div>
