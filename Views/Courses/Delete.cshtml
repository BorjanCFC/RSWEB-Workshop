@model Workshop1.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="container py-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold" style="color: #dc3545;">Delete Course</h1>
            <p class="text-muted mb-0">Permanently remove this course from the system</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to List
        </a>
    </div>

    <!-- Warning Alert -->
    <div class="alert alert-danger border-0 mb-4">
        <div class="d-flex align-items-center">
            <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
            <div>
                <h5 class="alert-heading mb-1">Warning: This action cannot be undone</h5>
                <p class="mb-0">Are you sure you want to delete this course? All associated enrollment records will also be removed.</p>
            </div>
        </div>
    </div>

    <!-- Course Information Card -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-0 py-3">
            <h5 class="card-title mb-0 fw-semibold">
                <i class="fas fa-book-open me-2" style="color: var(--primary-color);"></i>
                Course Information
            </h5>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted fw-medium">Title</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.Title</dd>

                        <dt class="col-sm-4 text-muted fw-medium mt-2">Credits</dt>
                        <dd class="col-sm-8 mt-2">
                            <span class="badge" style="background: linear-gradient(135deg, var(--primary-color), var(--primary-light)); color: white; padding: 0.25rem 0.75rem;">
                                @Model.Credits
                            </span>
                        </dd>

                        <dt class="col-sm-4 text-muted fw-medium mt-2">Semester</dt>
                        <dd class="col-sm-7 mt-2">@Model.Semester</dd>

                        <dt class="col-sm-4 text-muted fw-medium mt-2">Programme</dt>
                        <dd class="col-sm-7 mt-2">@Model.Programme</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted fw-medium">Education Level</dt>
                        <dd class="col-sm-8">@Model.EducationLevel</dd>

                        <dt class="col-sm-4 text-muted fw-medium mt-2">First Teacher</dt>
                        <dd class="col-sm-8 mt-2">
                            @if (Model.FirstTeacher != null)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="teacher-icon me-2">
                                        <i class="fas fa-user-tie" style="color: var(--primary-color);"></i>
                                    </div>
                                    @Model.FirstTeacher.FirstName @Model.FirstTeacher.LastName
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">-- none --</span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted fw-medium mt-2">Second Teacher</dt>
                        <dd class="col-sm-8 mt-2">
                            @if (Model.SecondTeacher != null)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="teacher-icon me-2">
                                        <i class="fas fa-user-tie" style="color: var(--primary-color);"></i>
                                    </div>
                                    @Model.SecondTeacher.FirstName @Model.SecondTeacher.LastName
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">-- none --</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Enrollments Summary -->
            @{
                var enrollmentCount = Model.Enrollments?.Count ?? 0;
            }
            @if (enrollmentCount > 0)
            {
                <div class="alert alert-warning mt-4 border-0">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-users me-3"></i>
                        <div>
                            <strong>Note:</strong> This course has @enrollmentCount enrolled student@(enrollmentCount != 1 ? "s" : "").
                            All enrollment records will be deleted along with the course.
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Delete Confirmation Form -->
    <div class="card shadow-sm border-0 border-danger">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="fw-semibold mb-1" style="color: #dc3545;">
                        <i class="fas fa-trash-alt me-2"></i>
                        Confirm Deletion
                    </h6>
                    <p class="text-muted mb-0 small">This action is permanent and cannot be reversed.</p>
                </div>
                <form asp-action="Delete" method="post" class="mb-0">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="fas fa-trash me-1"></i>Delete Course
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

        .card.border-danger {
            border: 1px solid rgba(220, 53, 69, 0.2);
        }

    .card-header {
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .badge {
        font-weight: 500;
        font-size: 0.85rem;
    }

    .teacher-icon {
        width: 28px;
        height: 28px;
        background: rgba(79, 70, 229, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
    }

    .alert-danger {
        background-color: rgba(220, 53, 69, 0.1);
        border: 1px solid rgba(220, 53, 69, 0.2);
    }

    .alert-warning {
        background-color: rgba(255, 193, 7, 0.1);
        border: 1px solid rgba(255, 193, 7, 0.2);
    }

    dt {
        color: #6c757d;
    }

    dd {
        color: #212529;
    }

    .btn-danger {
        background: linear-gradient(135deg, #dc3545, #c82333);
        border: none;
        font-weight: 500;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #c82333, #bd2130);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.2);
        }

    @@media (max-width: 768px) {
        .d-flex.justify-content-between.align-items-center {
            flex-direction: column;
            align-items: flex-start !important;
            gap: 1rem;
        }

            .d-flex.justify-content-between.align-items-center > .d-flex {
                width: 100%;
                justify-content: space-between !important;
            }
    }
</style>