@{
    ViewData["Title"] = "Home";
}

<!-- HERO SECTION -->
<div class="p-5 mb-5 rounded-3">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">EduManage Platform</h1>

                @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                {
                    <div class="row row-cols-1 row-cols-md-3 g-4 mt-4">
                        <div class="col">
                            <a class="btn btn-primary btn-lg w-100 py-3"
                               asp-controller="Students" asp-action="Index">
                                <i class="fas fa-user-graduate me-2"></i>Manage Students
                            </a>
                        </div>

                        <div class="col">
                            <a class="btn btn-primary btn-lg w-100 py-3"
                               asp-controller="Teachers" asp-action="Index">
                                <i class="fas fa-chalkboard-teacher me-2"></i>Manage Teachers
                            </a>
                        </div>

                        <div class="col">
                            <a class="btn btn-primary btn-lg w-100 py-3"
                               asp-controller="Courses" asp-action="Index">
                                <i class="fas fa-book-open me-2"></i>Manage Courses
                            </a>
                        </div>
                    </div>
                }
                else if (User.Identity?.IsAuthenticated == true && User.IsInRole("Student"))
                {
                    <div class="row row-cols-1 row-cols-md-3 g-4 mt-4">
                        <div class="col">
                            <a class="btn btn-primary btn-lg w-100 py-3"
                               asp-controller="Courses" asp-action="Index">
                                <i class="fas fa-user-graduate me-2"></i>View Courses
                            </a>
                        </div>

                        <div class="col">
                            <a class="btn btn-primary btn-lg w-100 py-3"
                               asp-controller="Students" asp-action="MyProfile">
                                <i class="fas fa-chalkboard-teacher me-2"></i>MyProfile
                            </a>
                        </div>

                    </div>
                }
                else if (User.Identity?.IsAuthenticated == true && User.IsInRole("Teacher"))
                {
                    <div class="row row-cols-1 row-cols-md-3 g-4 mt-4">
                        <div class="col">
                            <a class="btn btn-primary btn-lg w-100 py-3"
                               asp-controller="Courses" asp-action="Index">
                                <i class="fas fa-user-graduate me-2"></i>View Courses
                            </a>
                        </div>

                        <div class="col">
                            <a class="btn btn-primary btn-lg w-100 py-3"
                               asp-controller="Teachers" asp-action="MyProfile">
                                <i class="fas fa-chalkboard-teacher me-2"></i>MyProfile
                            </a>
                        </div>

                    </div>
                }
                else
                {
                    <div class="mt-4">
                        <a class="btn btn-primary btn-lg px-5 py-3"
                           asp-area="Identity"
                           asp-page="/Account/Login">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </a>
                    </div>
                }
            </div>

            <div class="col-lg-4 d-none d-lg-block">
                <div class="text-center">
                    <div class="p-4 rounded-3"
                         style="background: linear-gradient(135deg, rgba(67,97,238,0.1), rgba(76,201,240,0.1));">
                        <i class="fas fa-graduation-cap"
                           style="font-size: 8rem; color: var(--primary-color);"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!User.IsInRole("Admin") && !User.IsInRole("Student") && !User.IsInRole("Teacher"))
{
    <!-- FEATURES SECTION -->
<div class="container mb-5">
    <div class="row g-4 text-center">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 p-4">
                <i class="fas fa-user-graduate fa-3x mb-3 text-primary"></i>
                <h5 class="fw-bold">Students</h5>
                <p class="text-muted">
                    Manage student records, enrollment and academic progress.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 p-4">
                <i class="fas fa-chalkboard-teacher fa-3x mb-3 text-success"></i>
                <h5 class="fw-bold">Teachers</h5>
                <p class="text-muted">
                    Organize teaching staff and assign them to courses.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 p-4">
                <i class="fas fa-book-open fa-3x mb-3 text-warning"></i>
                <h5 class="fw-bold">Courses</h5>
                <p class="text-muted">
                    Create courses, enroll students and manage semesters.
                </p>
            </div>
        </div>
    </div>
</div>

<!-- STATS SECTION -->
<div class="container mb-5">
    <div class="row text-center g-4">
        <div class="col-md-4">
            <div class="p-4 rounded-3 bg-light shadow-sm">
                <h2 class="fw-bold text-primary">100+</h2>
                <p class="mb-0 text-muted">Students</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="p-4 rounded-3 bg-light shadow-sm">
                <h2 class="fw-bold text-success">20+</h2>
                <p class="mb-0 text-muted">Teachers</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="p-4 rounded-3 bg-light shadow-sm">
                <h2 class="fw-bold text-warning">30+</h2>
                <p class="mb-0 text-muted">Courses</p>
            </div>
        </div>
    </div>
</div>

}