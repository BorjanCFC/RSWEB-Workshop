@model IEnumerable<Workshop1.Models.Teacher>

@{
    ViewData["Title"] = "Teachers";
}

<h1>Teachers</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-3">
            <label class="form-label">First name</label>
            <input type="text" name="firstName" value="@Context.Request.Query["firstName"]" class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Last name</label>
            <input type="text" name="lastName" value="@Context.Request.Query["lastName"]" class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Degree</label>
            <input type="text" name="degree" value="@Context.Request.Query["degree"]" class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Academic rank</label>
            <input type="text" name="academicRank" value="@Context.Request.Query["academicRank"]" class="form-control" />
        </div>

        <div class="col-12 mt-2">
            <button type="submit" class="btn btn-primary">Filter</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Degree</th>
            <th>Academic rank</th>
            <th>Office</th>
            <th>Hire date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Degree</td>
                <td>@item.AcademicRank</td>
                <td>@item.OfficeNumber</td>
                <td>@item.HireDate</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
