@model Workshop1.Models.ViewModels.TeacherCreateVM


@{
    ViewData["Title"] = "Create Teacher";
}

<div class="container py-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold" style="color: var(--primary-color);">Create New Teacher</h1>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to List
        </a>
    </div>

    <!-- Create Form Card -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0 fw-semibold">
                        <i class="fas fa-chalkboard-teacher me-2" style="color: var(--primary-color);"></i>
                        Teacher Information
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 mb-4"></div>

                        <div class="row g-3">
                            <!-- First Name -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="form-label fw-medium">
                                        <i class="fas fa-user me-1" style="color: #9333ea;"></i>
                                        First Name *
                                    </label>
                                    <input asp-for="FirstName" class="form-control"
                                           placeholder="Enter first name" />
                                    <span asp-validation-for="FirstName" class="text-danger small mt-1"></span>
                                </div>
                            </div>

                            <!-- Last Name -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LastName" class="form-label fw-medium">
                                        <i class="fas fa-user me-1" style="color: #9333ea;"></i>
                                        Last Name *
                                    </label>
                                    <input asp-for="LastName" class="form-control"
                                           placeholder="Enter last name" />
                                    <span asp-validation-for="LastName" class="text-danger small mt-1"></span>
                                </div>
                            </div>

                            <!-- Degree -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Degree" class="form-label fw-medium">
                                        <i class="fas fa-graduation-cap me-1" style="color: var(--secondary-color);"></i>
                                        Degree
                                    </label>
                                    <input asp-for="Degree" class="form-control"
                                           placeholder="e.g., Ph.D., M.Sc." />
                                    <span asp-validation-for="Degree" class="text-danger small mt-1"></span>
                                </div>
                            </div>

                            <!-- Academic Rank -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="AcademicRank" class="form-label fw-medium">
                                        <i class="fas fa-award me-1" style="color: #f59e0b;"></i>
                                        Academic Rank
                                    </label>
                                    <input asp-for="AcademicRank" class="form-control"
                                           placeholder="e.g., Professor, Assistant" />
                                    <span asp-validation-for="AcademicRank" class="text-danger small mt-1"></span>
                                </div>
                            </div>

                            <!-- Office Number -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="OfficeNumber" class="form-label fw-medium">
                                        <i class="fas fa-door-open me-1" style="color: #3b82f6;"></i>
                                        Office Number
                                    </label>
                                    <input asp-for="OfficeNumber" class="form-control"
                                           placeholder="e.g., A-101" />
                                    <span asp-validation-for="OfficeNumber" class="text-danger small mt-1"></span>
                                </div>
                            </div>

                            <!-- Hire Date -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="HireDate" class="form-label fw-medium">
                                        <i class="fas fa-calendar-alt me-1" style="color: var(--secondary-color);"></i>
                                        Hire Date *
                                    </label>
                                    <input asp-for="HireDate" class="form-control"
                                           type="date" />
                                    <span asp-validation-for="HireDate" class="text-danger small mt-1"></span>
                                </div>
                            </div>

                            <!-- Account Section -->
                            <div class="col-12 mt-4">
                                <div class="border-top pt-4">
                                    <h6 class="fw-semibold mb-3" style="color: var(--primary-color);">
                                        <i class="fas fa-key me-2"></i>
                                        Teacher Account (Login)
                                    </h6>

                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Email" class="form-label fw-medium">
                                                    <i class="fas fa-envelope me-1" style="color: var(--secondary-color);"></i>
                                                    Email *
                                                </label>
                                                <input asp-for="Email" class="form-control" placeholder="teacher@rsweb.com" />
                                                <span asp-validation-for="Email" class="text-danger small mt-1"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Password" class="form-label fw-medium">
                                                    <i class="fas fa-lock me-1" style="color: var(--secondary-color);"></i>
                                                    Password *
                                                </label>
                                                <input asp-for="Password" type="password" class="form-control" placeholder="Min 6 characters" />
                                                <span asp-validation-for="Password" class="text-danger small mt-1"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @if (!User.IsInRole("Admin"))
                            {
                                <!-- Profile Image Section -->
                                <div class="col-12 mt-4">
                                    <div class="border-top pt-4">
                                        <h6 class="fw-semibold mb-3" style="color: var(--primary-color);">
                                            <i class="fas fa-camera me-2"></i>
                                            Profile Image
                                        </h6>

                                        <div class="form-group">
                                            <label asp-for="ProfileImage" class="form-label fw-medium">
                                                <i class="fas fa-upload me-1" style="color: var(--secondary-color);"></i>
                                                Upload Image
                                            </label>
                                            <input asp-for="ProfileImage" type="file" class="form-control"
                                                   accept="image/*" />
                                            <small class="text-muted mt-1 d-block">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Upload a profile picture (JPG, PNG, GIF)
                                            </small>
                                            <span asp-validation-for="ProfileImage" class="text-danger small mt-1"></span>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Submit Buttons -->
                            <div class="col-12 mt-4 pt-3 border-top">
                                <div class="d-flex justify-content-center gap-3">
                                    <button type="submit" class="btn btn-primary px-4 py-2">
                                        <i class="fas fa-user-plus me-2"></i>Create Teacher
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                                        <i class="fas fa-times me-1"></i>Cancel
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Set default hire date to today
        document.addEventListener('DOMContentLoaded', function() {
            const hireDateInput = document.querySelector('input[name="HireDate"]');
            if (hireDateInput && !hireDateInput.value) {
                const today = new Date().toISOString().split('T')[0];
                hireDateInput.value = today;
            }
        });
    </script>
}

<style>
    .card {
        border-radius: 12px;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .card-header {
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #dee2e6;
        padding: 0.75rem 1rem;
        transition: all 0.2s ease;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(79, 70, 229, 0.15);
        }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border: none;
        color: #fff !important;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.25s ease;
    }

        .btn-primary:hover,
        .btn-primary:focus {
            background-color: var(--primary-color);
            filter: brightness(0.9);
            color: #fff !important;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(79, 70, 229, 0.25);
        }

    .btn-outline-secondary {
        border-radius: 8px;
        font-weight: 500;
    }

    input[type="file"] {
        padding: 0.5rem;
        border-radius: 8px;
        background-color: #f5f6ff;
    }

        input[type="file"]::file-selector-button {
            background: linear-gradient(135deg, #4f46e5, #6366f1);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 0.6rem 1.2rem;
            margin-right: 1rem;
            cursor: pointer;
            font-weight: 500;
        }

            input[type="file"]::file-selector-button:hover {
                filter: brightness(1.1);
                transform: translateY(-1px);
            }

    @@media (max-width: 768px) {
        .d-flex.justify-content-between.align-items-center {
            flex-direction: column;
            align-items: flex-start !important;
            gap: 1rem;
        }

        .d-flex.gap-2 {
            flex-direction: column;
            gap: 0.5rem !important;
        }

        .btn {
            width: 100%;
        }
    }
</style>