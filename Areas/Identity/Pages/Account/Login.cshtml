@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <!-- Login Card -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 py-4 text-center">
                    <div class="login-icon mb-3">
                        <i class="fas fa-sign-in-alt" style="font-size: 3rem; color: var(--primary-color);"></i>
                    </div>
                    <h2 class="fw-bold" style="color: var(--primary-color);">Welcome Back</h2>
                    <p class="text-muted mb-0">Sign in to your account</p>
                </div>

                <div class="card-body p-4">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 mb-4" role="alert"></div>

                        <!-- Email Field -->
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-medium">
                                <i class="fas fa-envelope me-2" style="color: var(--primary-color);"></i>
                                Email Address
                            </label>
                            <input asp-for="Input.Email" class="form-control"
                                   autocomplete="username"
                                   aria-required="true"
                                   placeholder="Enter your email" />
                            <span asp-validation-for="Input.Email" class="text-danger small mt-1"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label fw-medium">
                                <i class="fas fa-lock me-2" style="color: var(--primary-color);"></i>
                                Password
                            </label>
                            <input asp-for="Input.Password" class="form-control"
                                   autocomplete="current-password"
                                   aria-required="true"
                                   placeholder="Enter your password" />
                            <span asp-validation-for="Input.Password" class="text-danger small mt-1"></span>
                        </div>

                        <!-- Remember Me -->
                        <div class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label" asp-for="Input.RememberMe">
                                    <i class="fas fa-check-circle me-1"></i>
                                    Remember me
                                </label>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="mb-3">
                            <button id="login-submit" type="submit" class="btn btn-primary w-100 py-2">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Sign In
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .card {
        border-radius: 12px;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .card-header {
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #dee2e6;
        padding: 0.75rem 1rem;
        transition: all 0.2s ease;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(79, 70, 229, 0.15);
        }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border: none;
        color: #fff !important;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.25s ease;
    }

        .btn-primary:hover,
        .btn-primary:focus {
            background-color: var(--primary-color);
            filter: brightness(0.9);
            color: #fff !important;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(79, 70, 229, 0.25);
        }

    .form-check-input:checked {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .form-check-input:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(79, 70, 229, 0.15);
    }

    .login-icon {
        animation: fadeIn 0.5s ease;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    a {
        color: var(--primary-color);
        transition: color 0.2s ease;
    }

        a:hover {
            color: var(--primary-light);
            text-decoration: underline;
        }
</style>